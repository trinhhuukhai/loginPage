<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bb"
    tools:context=".page.QuizzResult">

    <ImageView
        android:id="@+id/iconCongratulation"
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="50dp"
        android:adjustViewBounds="true"
        android:src="@drawable/chucmung"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textViewCongra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iconCongratulation"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="You're successfully complete"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_below="@+id/textViewCongra"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/correctAnswer"
            android:text="Correct Answer: 0"
            android:textStyle="bold"
            android:textColor="#00C853"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/IncorrectAnswer"
            android:text="Wrong Answer: 0"
            android:textStyle="bold"
            android:textColor="#DD2C00"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/startNewBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Start new Quizz"
        android:textColor="#FFFFFF"
        android:background="@drawable/round_back_green"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>